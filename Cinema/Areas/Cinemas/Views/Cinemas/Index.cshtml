@model IEnumerable<Cinema.Models.Cinemaa>
@{
    ViewData["Title"] = "Cinemas Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">🎬 Cinemas Management</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">+ Add Cinema</a>
    </div>

    <!-- Success Alert -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search -->
    <form method="get" class="mb-3 d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Search by name or location" value="@ViewBag.Search" />
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- Cinemas Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-muted">No cinemas found.</td>
                    </tr>
                }
                else
                {
                    int index = 1;
                    foreach (var cinema in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>
                                @if (!string.IsNullOrEmpty(cinema.ImgUrl))
                                {
                                    <img src="@Url.Content($"~/images/cinemas/{cinema.ImgUrl}")" alt="Image" width="80" class="rounded" />
                                }
                                else
                                {
                                    <span class="text-muted">No Image</span>
                                }
                            </td>
                            <td>@cinema.Name</td>
                            <td>@cinema.Description</td>
                            <td>@cinema.Location</td>
                            <td>@cinema.CreatedAt?.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-info btn-sm me-1">Details</a>
                                <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                <form asp-action="Delete" asp-route-id="@cinema.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('Are you sure you want to delete this actor?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>

                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
</div>

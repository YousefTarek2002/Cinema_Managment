@model IEnumerable<Cinema.Models.Cinemaa>
@{
    ViewData["Title"] = "🍿 Cinemas Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">🍿 Cinemas Management</h2>
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">
            <i class="bi bi-building-add"></i> Add New Cinema
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-md-6">
                    <input type="text" name="search" class="form-control form-control-lg"
                           placeholder="🏛 Search cinema name...">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
                <div class="col-md-3">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="text-center text-muted fs-5">
                <i class="bi bi-building"></i> No cinemas found.
            </div>
        }
        else
        {
            foreach (var cinema in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card cinema-card h-100 border-0 shadow-sm">
                        <img src="@cinema.ImgUrl" class="card-img-top rounded-top" style="height:220px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="fw-bold">@cinema.Name</h5>
                            <p class="text-muted mb-1">
                                <i class="bi bi-geo-alt"></i> @cinema.Location
                            </p>
                            <p class="small mb-0 text-muted">🎞 Movies: @(cinema.Movies?.Count ?? 0)</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .cinema-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15) !important;
        transition: all 0.3s ease-in-out;
    }
</style>

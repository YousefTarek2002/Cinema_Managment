@model Cinema.Models.Cinemaa
@{
    ViewData["Title"] = "Edit Cinema";
}

<h2 class="fw-bold mb-4"> Edit Cinema</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow-sm p-4">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Image</label>
        <input type="file" name="img" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImgUrl))
        {
            <img src="@Model.ImgUrl" class="mt-2 rounded" width="100" />
        }
    </div>

    <div class="mb-3">
        <label>Logo</label>
        <input type="file" name="logo" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.Logo))
        {
            <img src="@Model.Logo" class="mt-2 rounded" width="100" />
        }
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label fw-bold"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning"> Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

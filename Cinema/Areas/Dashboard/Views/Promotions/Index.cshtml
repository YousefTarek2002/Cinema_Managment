@model IEnumerable<Cinema.Models.Promotion>
@{
    ViewData["Title"] = "Promotions";
}

<h2 class="mb-4">Promotions</h2>

<a asp-action="Create" class="btn btn-success mb-4">Add New Promotion</a>

<div class="row">
    @foreach (var promo in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@promo.Code</h5>
                    <p class="card-text">
                        <strong>Discount:</strong> @promo.Discount % <br />
                        <strong>Valid To:</strong> @promo.ValidTo.ToString("yyyy-MM-dd") <br />
                        <strong>Max Usage:</strong> @promo.MaxUsage <br />
                        <strong>Used:</strong> @promo.UsedCount <br />
                        <strong>Movie:</strong> @promo.Movie?.Name
                    </p>

                    <div class="mt-auto d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-warning btn-sm">Edit</a>

                        <form asp-action="Delete" asp-route-id="@promo.Id" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this promotion?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

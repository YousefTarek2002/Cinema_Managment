@model Cinema.Models.Promotion
@{
    ViewData["Title"] = "Edit Promotion";
}

<h2>Add Promotion</h2>

<form method="post">
    <div class="form-group">
        <label>Code</label>
        <input asp-for="Code" class="form-control" />
    </div>

    <div class="form-group">
        <label>Discount (%)</label>
        <input asp-for="Discount" class="form-control" />
    </div>

    <div class="form-group">
        <label>Valid To</label>
        <input asp-for="ValidTo" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Max Usage</label>
        <input asp-for="MaxUsage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Movie</label>
        <select asp-for="MovieId" class="form-control" asp-items="@(new SelectList(ViewBag.Movies, "Id", "Name"))"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

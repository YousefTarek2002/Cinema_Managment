            </div>
        </div>
    </div>
</div>

<!-- Recent Movies Table -->
<div class="card shadow-sm">
    <div class="card-header bg-light fw-bold d-flex justify-content-between align-items-center">
        <span>Latest Movies</span>
        <a asp-area="Movies" asp-controller="Movies" asp-action="Index" class="btn btn-sm btn-primary">View All</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Poster</th>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Cinema</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var movie in Model)
                    {
                        <tr>
                            <td>
                                <img src="@movie.MainImg" alt="@movie.Name" width="60" height="60" class="rounded" style="object-fit: cover;">
                            </td>
                            <td>@movie.Name</td>
                            <td>@movie.Category?.Name</td>
                            <td>@movie.Cinema?.Name</td>
                            <td>@movie.DateTime.ToShortDateString()</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">
                            No recent movies found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

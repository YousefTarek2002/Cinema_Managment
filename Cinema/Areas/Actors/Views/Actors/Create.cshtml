@model Cinema.Models.Actor
@{
    ViewData["Title"] = "Create Actor";
}

<h2>Create Actor</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Bio" class="form-label">Biography</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Image</label>
        <input type="file" name="img" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Movies</label><br />
        @foreach (var movie in ViewBag.Movies as List<Cinema.Models.Movie>)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedMovies" value="@movie.Id" />
                <label class="form-check-label">@movie.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@model Cinema.Models.Actor
@{
    ViewData["Title"] = "Actor Details";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Actor Details</h2>

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <img src="@Url.Content($"~/images/actors/{Model.ImgUrl}")" class="img-fluid rounded-start" alt="@Model.FullName" />
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="card-text">@Model.Bio</p>
                    <p class="card-text"><small class="text-muted">Created At: @Model.CreatedAt?.ToString("dd MMM yyyy")</small></p>
                    <p class="card-text"><small class="text-muted">Updated At: @Model.UpdatedAt?.ToString("dd MMM yyyy")</small></p>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

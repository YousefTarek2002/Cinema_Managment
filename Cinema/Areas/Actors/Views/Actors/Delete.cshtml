@model Cinema.Models.Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<h2 class="text-danger mb-3"> Delete Actor</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.FullName</strong>?
</div>

@if (!string.IsNullOrEmpty(Model.ImgUrl))
{
    <img src="@Model.ImgUrl" alt="@Model.FullName" width="150" class="rounded mb-3 border" />
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model Cinema.Models.Actor
@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Delete Actor</h2>

    <div class="alert alert-danger">
        Are you sure you want to delete this actor?
    </div>

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImgUrl))
                {
                    <img src="@Url.Content($"~/images/actors/{Model.ImgUrl}")" class="img-fluid rounded-start" alt="@Model.FullName" />
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="card-text">@Model.Bio</p>
                    <p class="card-text"><small class="text-muted">Created At: @Model.CreatedAt?.ToString("dd MMM yyyy")</small></p>
                    <p class="card-text"><small class="text-muted">Updated At: @Model.UpdatedAt?.ToString("dd MMM yyyy")</small></p>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Yes, Delete</button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

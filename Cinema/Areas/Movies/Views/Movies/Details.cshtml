@model Cinema.Models.Movie
@{
    ViewData["Title"] = "Movie Details";
}

<div class="row g-4">
    <div class="col-md-5">
        @if (!string.IsNullOrEmpty(Model.MainImg))
        {
            <img src="@Model.MainImg" class="img-fluid rounded shadow-sm" style="max-height: 400px; object-fit: cover;" />
        }
        else
        {
            <div class="bg-light text-center p-5 rounded">No Image</div>
        }

        @if (!string.IsNullOrEmpty(Model.SubImages))
        {
            var images = Model.SubImages.Split(',', StringSplitOptions.RemoveEmptyEntries);
            if (images.Length > 0)
            {
                <h6 class="mt-3"> Additional Images</h6>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in images)
                    {
                        <img src="@img" style="height: 80px; object-fit: cover; border-radius: 5px;" />
                    }
                </div>
            }
        }
    </div>

    <div class="col-md-7">
        <h2 class="fw-bold">@Model.Name</h2>
        <p>@Model.Description</p>
        <p><strong>Category:</strong> @Model.Category?.Name</p>
        <p><strong>Cinema:</strong> @Model.Cinema?.Name</p>
        <p>
            <strong>Actors:</strong>
            @if (Model.MovieActors != null && Model.MovieActors.Any())
            {
                @string.Join(", ", Model.MovieActors.Select(ma => ma.Actor?.FullName))
            }
        </p>
        <p><strong>Price:</strong> $@Model.Price</p>
        <p>
            <strong>Status:</strong>
            <span class="badge @(Model.Status ? "bg-success" : "bg-secondary")">
                @(Model.Status ? "Available" : "Hidden")
            </span>
        </p>

        <a asp-area="Movies" asp-controller="Movies" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
        <a asp-area="Movies" asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

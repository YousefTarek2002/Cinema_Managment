@model IEnumerable<Cinema.Models.Movie>
@{
    ViewData["Title"] = "🎬 Movies Dashboard";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            🎬 Movies Management
        </h2>
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Movie
        </a>
    </div>

    <!-- Search & Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-md-4">
                    <input type="text" name="search" value="@Context.Request.Query["search"]"
                           class="form-control form-control-lg" placeholder="🔍 Search movie name...">
                </div>
                <div class="col-md-3">
                    <select name="categoryId" class="form-select form-select-lg">
                        <option value="">🎭 All Categories</option>
                        @foreach (var category in ViewBag.Categories ?? new List<Cinema.Models.Category>())
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="cinemaId" class="form-select form-select-lg">
                        <option value="">🏛 All Cinemas</option>
                        @foreach (var cinema in ViewBag.Cinemas ?? new List<Cinema.Models.Cinemaa>())
                        {
                            <option value="@cinema.Id">@cinema.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex gap-2">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-counterclockwise"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }

    <!-- Movie Grid -->
    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="text-center text-muted fs-5">
                <i class="bi bi-film"></i> No movies found.
            </div>
        }
        else
        {
            foreach (var movie in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card movie-card h-100 border-0 shadow-sm">
                        <div class="movie-img position-relative">
                            <img src="@movie.MainImg" class="card-img-top rounded-top" style="height:230px; object-fit:cover;" />
                            <span class="badge bg-dark position-absolute top-0 start-0 m-2">@movie.Category?.Name</span>
                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">@movie.Cinema?.Name</span>
                        </div>
                        <div class="card-body">
                            <h5 class="fw-bold mb-1">@movie.Name</h5>
                            <p class="text-muted small mb-1">
                                <i class="bi bi-calendar-event"></i> @movie.DateTime.ToString("yyyy-MM-dd")
                            </p>
                            <p class="text-muted small mb-2">
                                🎭 @movie.MovieActors?.Count() Actors
                            </p>
                            <p class="small">@movie.Description?.Substring(0, Math.Min(movie.Description.Length, 90))...</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@movie.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Are you sure you want to delete this movie?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- Custom CSS -->
<style>
    .movie-card {
        transition: transform 0.25s ease-in-out, box-shadow 0.25s ease-in-out;
    }

        .movie-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15) !important;
        }

    .movie-img .badge {
        font-size: 0.85rem;
    }
</style>

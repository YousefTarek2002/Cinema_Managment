@model Cinema.Models.Movie
@{
    ViewData["Title"] = "Add Movie";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Add New Movie</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="Status" class="form-check-input" />
            <label asp-for="Status" class="form-check-label">Active</label>
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                <option value="">-- Select Category --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Cinema</label>
            <select asp-for="CinemaId" class="form-select" asp-items="ViewBag.Cinemas">
                <option value="">-- Select Cinema --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Main Image</label>
            <input type="file" name="mainImg" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Sub Images</label>
            <input type="file" name="subImgs" multiple class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Cinema.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-3">Category Details</h2>

    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content($"~/images/categories/{Model.ImageUrl}")" class="img-fluid rounded-start" alt="@Model.Name" />
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text">Display Order: @Model.DisplayOrder</p>
                    <p class="card-text"><small class="text-muted">Created At: @Model.CreatedAt.ToString("dd MMM yyyy")</small></p>
                    <p class="card-text"><small class="text-muted">Updated At: @Model.UpdatedAt?.ToString("dd MMM yyyy")</small></p>

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

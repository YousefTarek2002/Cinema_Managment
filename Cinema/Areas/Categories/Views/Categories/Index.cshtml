@model IEnumerable<Cinema.Models.Category>
@{
    ViewData["Title"] = "📂 Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">📂 Categories Management</h2>
            <p class="text-muted mb-0">Manage, edit, and organize all your movie categories here.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary shadow-sm px-4">
            + Add Category
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- 🔍 Search & Sort -->
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Search by name..." />
        </div>
        <div class="col-md-3">
            <select name="sortOrder" class="form-select" onchange="this.form.submit()">
                <option value="asc" selected="@((ViewBag.SortOrder == "asc") ? "selected" : null)">Ascending</option>
                <option value="desc" selected="@((ViewBag.SortOrder == "desc") ? "selected" : null)">Descending</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-secondary w-100">Filter</button>
        </div>
    </form>

    <!-- 🧾 Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Display Order</th>
                        <th>Created At</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(category.ImageUrl))
                                {
                                    <img src="~/images/categories/@category.ImageUrl" alt="category" width="50" height="50" class="rounded shadow-sm" />
                                }
                                else
                                {
                                    <span class="text-muted">No image</span>
                                }
                            </td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>@category.DisplayOrder</td>
                            <td>@category.CreatedAt.ToShortDateString()</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-info me-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

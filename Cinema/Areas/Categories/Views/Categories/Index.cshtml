@model IEnumerable<Cinema.Models.Category>
@{
    ViewData["Title"] = "🗂 Categories Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">🗂 Categories Management</h2>
        <a asp-action="Create" class="btn btn-lg btn-primary shadow-sm">
            <i class="bi bi-folder-plus"></i> Add Category
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm">@TempData["Success"]</div>
    }

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="text-center text-muted fs-5">
                <i class="bi bi-folder"></i> No categories found.
            </div>
        }
        else
        {
            foreach (var cat in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card category-card h-100 border-0 shadow-sm">
                        <img src="~/images/categories/@cat.ImageUrl" class="card-img-top rounded-top" style="height:200px; object-fit:cover;" />
                        <div class="card-body">
                            <h5 class="fw-bold">@cat.Name</h5>
                            <p class="text-muted small mb-1">@cat.Description</p>
                            <p class="small text-muted">🎬 Movies: @(cat.Movies?.Count ?? 0)</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .category-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.15) !important;
        transition: all 0.3s ease-in-out;
    }
</style>

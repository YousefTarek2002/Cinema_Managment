@model Cinema.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<h2 class="text-danger mb-3"> Delete Category</h2>

<div class="alert alert-warning">
    Are you sure you want to delete <strong>@Model.Name</strong>?
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="~/images/categories/@Model.ImageUrl" width="150" class="rounded border mb-3" />
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

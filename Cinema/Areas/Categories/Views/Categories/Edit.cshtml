@model Cinema.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<h2 class="fw-bold mb-3"> Edit Category</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label class="form-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="~/images/categories/@Model.ImageUrl" alt="@Model.Name" width="120" class="rounded mb-2 border" />
        }
        else
        {
            <p class="text-muted">No image</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Image</label>
        <input type="file" name="img" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

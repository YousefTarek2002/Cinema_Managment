@model Cinema.Models.Category
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-4">✏️ Edit Category</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            ← Back to List
        </a>
    </div>
   

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="card shadow-sm p-4">
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="DisplayOrder" class="form-label"></label>
                <input asp-for="DisplayOrder" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Current Image</label><br />
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="~/images/categories/@Model.ImageUrl" alt="Category Image" width="100" class="rounded mb-2" />
                }
                else
                {
                    <p class="text-muted">No image uploaded</p>
                }
            </div>

            <div class="mb-3">
                <label class="form-label">Upload New Image</label>
                <input type="file" name="img" class="form-control" />
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back</a>
                <button type="submit" class="btn btn-success px-4">Update</button>
            </div>
        </div>
    </form>
</div>

@model Cinema.ViewModels.NewPasswordVM
@{
    ViewData["Title"] = "New Password";
}
<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="col-md-6">
        <div class="card p-4 shadow-lg rounded-4">

            <h3 class="text-center mb-4 fw-bold">New Password</h3>

            <form asp-action="NewPassword" method="post">
                <input type="hidden" asp-for="UserId" />

                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control rounded-pill" />

                <label asp-for="ConfirmPassword" class="form-label mt-2"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" />

                <button class="btn btn-primary w-100 mt-3 rounded-pill btn-lg">Save</button>
            </form>

        </div>
    </div>
</div>

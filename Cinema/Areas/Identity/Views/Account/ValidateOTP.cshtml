@model Cinema.ViewModels.ValidateOTP
@{
    ViewData["Title"] = "Validate OTP";
}
<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-5">
                <h3 class="text-center mb-4">Enter OTP</h3>
                <form asp-action="ValidateOTP" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-3">
                        <label asp-for="OTP" class="form-label"></label>
                        <input asp-for="OTP" class="form-control" />
                        <span asp-validation-for="OTP" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 rounded-pill mt-2">Validate OTP</button>
                </form>

                <p class="text-center mt-3">
                    <a asp-action="Login">Back to Login</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
